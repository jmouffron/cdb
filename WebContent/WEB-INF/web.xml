<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<display-name>cdb</display-name>
	<welcome-file-list>
		<welcome-file>dashboard.jsp</welcome-file>
	</welcome-file-list>

	<error-page>
		<error-code>403</error-code>
		<location>/403.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/500.jsp</location>
	</error-page>

	<error-page>
		<exception-type>com.excilys.cdb.exception.BadInputException</exception-type>
		<location>/BadInputException.jsp</location>
	</error-page>
	<error-page>
		<exception-type>com.excilys.cdb.exception.ServiceException</exception-type>
		<location>/ServiceException.jsp</location>
	</error-page>
</web-app>